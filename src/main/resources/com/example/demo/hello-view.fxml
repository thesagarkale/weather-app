<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.MainController" style="-fx-background-color:#ddd">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="mainLabel"  text= "Weather app" style="-fx-font-size:22px;"/>
    <HBox alignment="CENTER">
        <TextField fx:id="city"/>
        <Button text="Search" style="-fx-background-color:#92b8db; -fx-color:#FFF; -fx-cursor:hand" onAction="#handleCitySelected"/>
    </HBox>
    <Text fx:id="info"/>
</VBox>
